<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.srj.web.datacenter.mapper.KeywordMapper">
	<!--查询用户列表-->
	<select id="findPageInfo" parameterType="com.srj.web.datacenter.model.Keyword" resultType="com.srj.web.datacenter.model.Keyword">
		SELECT
			id,
			NAME,
			create_name,
			create_time
		FROM
			keyword
		<where>
			1 = 1
			<if test="@Ognl@isNotBlank(name)">
		 	and name like concat('%',#{name} ,'%')
		    </if>
		</where>
		ORDER BY
			id DESC
	</select>
	
	<!-- 检查关键词重复 -->
	<select id="checkKeyword" parameterType="com.srj.web.datacenter.model.Keyword" resultType="java.lang.Long">
		SELECT id FROM keyword 
		<where>
			name = #{name}
		</where>
	</select>

</mapper>